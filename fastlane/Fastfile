default_platform(:ios)

platform :ios do
  desc "Build and upload to TestFlight"
  lane :beta do
    app_identifier = "com.yourname.tryggaamtal"  # ‚Üê CHANGE TO YOUR EXACT BUNDLE ID

    api_key = app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
      key_filepath: ENV["APP_STORE_CONNECT_PRIVATE_KEY_PATH"]
    )

    sh "xcodebuild -scheme TryggSamtalApp -configuration Release -derivedDataPath DerivedData clean build"

    sh "mkdir -p Payload && cp -r DerivedData/Build/Products/Release-iphoneos/TryggSamtalApp.app Payload/"

    sh "zip -r TryggSamtalApp.ipa Payload"

    upload_to_testflight(
      api_key: api_key,
      app_identifier: app_identifier,
      ipa: "TryggSamtalApp.ipa",
      skip_waiting_for_build_processing: true
    )
  end
end
