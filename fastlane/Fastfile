default_platform(:ios)

platform :ios do
  lane :beta do
    app_identifier = "com.yourname.tryggsamtal"

    api_key = app_store_connect_api_key(
      key_id: ENV["ASC_KEY_ID"],
      issuer_id: ENV["ASC_ISSUER_ID"],
      key_content: ENV["ASC_KEY_CONTENT"]
    )

    # Use gym instead of xcodebuild â€” it handles SPM better and skips prompts
    gym(
      scheme: "TryggSamtalApp",
      configuration: "Release",
      export_method: "app-store",
      clean: true,
      silent: true,  # No prompts in CI
      export_options: {
        compileBitcode: false,
        uploadBitcode: false,
        uploadSymbols: true
      },
      derivedDataPath: "build"  # Matches your current
    )

    upload_to_testflight(
      api_key: api_key,
      skip_waiting_for_build_processing: true
    )
  end
end
