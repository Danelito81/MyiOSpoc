default_platform(:ios)

platform :ios do
  desc "Build and upload to TestFlight"
  lane :beta do
    api_key = app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_API_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_API_KEY_ISSUER_ID"],
      key_content: Base64.decode64(ENV["APP_STORE_CONNECT_API_KEY_CONTENT"]),
      duration: 1200, # optional (max 1200)
      in_house: false # optional but may be required if using enterprise account
    )

    # Automatic code signing - requires Git repo for Match, but for simplicity, we'll use manual or auto
    # If you have certs set up, use match(type: "appstore", api_key: api_key)
    increment_build_number(build_number: latest_testflight_build_number(api_key: api_key) + 1)
    
    build_app(
      scheme: "Runner", # For Flutter; change to your Xcode scheme if different
      export_method: "app-store"
    )
    
    upload_to_testflight(
      api_key: api_key,
      skip_waiting_for_build_processing: true # Speeds up, but check manually
    )
  end

  desc "Build and submit to App Store"
  lane :release do
    # Similar to beta, but use upload_to_app_store instead
    api_key = app_store_connect_api_key(...) # Repeat from above
    increment_build_number(...)
    build_app(...)
    upload_to_app_store(
      api_key: api_key,
      force: true # Skips HTML preview
    )
  end
end
